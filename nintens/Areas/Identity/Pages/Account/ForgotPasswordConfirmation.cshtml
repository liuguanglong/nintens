@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}

<div class="logincontainer1">
    <div class="loginform">
        <div class="text-center">
            <h4 class="mt-1 mb-1 pb-2 pt-4">FORGOT PASSWORD CONFIRMATION</h4>
            <a>ProcessGo Plus User Portal</a>
        </div>
        <form method="post">
            <h6 class="mt-1 mb-1 pb-2 pt-4 ml-3 mr-3">
                Please check your email to reset your password.
            </h6>
        </form>
    </div>
</div>

