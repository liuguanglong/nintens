@using MudBlazor
@using  System.Globalization
@using Microsoft.AspNetCore.Identity
@using repository

<AuthorizeView>
    <Authorized>
        <MudText Align="Align.Right" Style="@($"color:{Colors.Yellow.Accent2};")">Hello,@context.User.Identity.Name!</MudText>
        <MudIconButton Style="@($"color:{Colors.Yellow.Accent2};")" Icon="@Icons.Filled.Logout" aria-label="LogOut" Href="Identity/Account/LogOut"></MudIconButton>
     
    </Authorized>
    <NotAuthorized>
        <MudLink Href="Identity/Account/Register" Style="@($"color:{Colors.Yellow.Accent2};")" Typo="Typo.body2" Color="Color.Warning">Register</MudLink>
        <MudLink Href="Identity/Account/Login" Style="@($"color:{Colors.Yellow.Accent2};")" Typo="Typo.body2" Color="Color.Warning">Log in</MudLink>
    </NotAuthorized>
</AuthorizeView>

